{
  "name": "transifex-loader",
  "version": "4.0.0",
  "description": "Webpack loader to fetch imported translation files from transifex.",
  "main": "dist/transifex-loader.js",
  "scripts": {
    "test": "npm run lint && nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "eslint src/ test/",
    "build": "webpack",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "transifex",
    "webpack",
    "loader"
  ],
  "author": "Martin Giger (https://humanoids.be)",
  "license": "MIT",
  "dependencies": {
    "babel-preset-env": "^1.6.0",
    "babel-runtime": "^6.11.6",
    "loader-utils": "^1.1.0",
    "mz": "^2.4.0",
    "transifex-api-es6": "^0.2.3",
    "transifex-config": "^4.0.0"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-module-rewrite": "0.2.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "codecov": "^2.0.1",
    "eslint": "^4.6.1",
    "eslint-plugin-freaktechnik": "^2.5.0",
    "nyc": "^11.2.1",
    "random-string": "^0.2.0",
    "webpack": "^3.5.6",
    "webpack-node-externals": "^1.3.3"
  },
  "bugs": {
    "url": "https://github.com/freaktechnik/transifex-loader/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/freaktechnik/transifex-loader.git"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-core/register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs"
        }
      ],
      "@ava/stage-4"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false
        }
      ],
      [
        "module-rewrite",
        {
          "replaceFunc": "./test/_rewrite-modules.js"
        }
      ]
    ]
  },
  "engines": {
    "node": ">= 6.11.3"
  }
}
