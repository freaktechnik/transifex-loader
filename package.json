{
  "name": "transifex-loader",
  "version": "5.0.2",
  "description": "Webpack loader to fetch imported translation files from transifex.",
  "main": "dist/transifex-loader.js",
  "scripts": {
    "test": "npm run lint && nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint:js": "eslint src/ test/",
    "lint:ec": "eclint check $(git ls-files)",
    "lint": "npm run lint:js && npm run lint:ec",
    "build": "webpack --mode=production",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "transifex",
    "webpack",
    "loader"
  ],
  "author": "Martin Giger (https://humanoids.be)",
  "license": "MIT",
  "dependencies": {
    "loader-utils": "^1.4.0",
    "mz": "^2.7.0",
    "transifex-api-es6": "^0.2.4",
    "transifex-config": "^4.0.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@freaktechnik/eslint-config-node": "^7.1.0",
    "@freaktechnik/eslint-config-test": "^7.1.0",
    "@freaktechnik/eslint-config-webpack": "^7.1.0",
    "ava": "^3.5.2",
    "babel-plugin-module-rewrite": "0.2.0",
    "codecov": "^3.6.1",
    "eclint": "^2.8.1",
    "eslint": "^6.8.0",
    "nyc": "^15.0.0",
    "random-string": "^0.2.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "bugs": {
    "url": "https://github.com/freaktechnik/transifex-loader/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/freaktechnik/transifex-loader.git"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    },
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs"
        }
      ]
    ],
    "plugins": [
      [
        "module-rewrite",
        {
          "replaceFunc": "./test/_rewrite-modules.js"
        }
      ]
    ]
  },
  "engines": {
    "node": ">= 8.9.4"
  },
  "sideEffects": false
}
